# 你的域名, 例:nas.baidu.com (Buypass 不支持泛域名)
export DOMAIN=your_domain

# DNS类型，根据域名服务商而定"dns_ali,dns_dp,dns_gd,dns_aws,dns_cf" 参考：https://github.com/acmesh-official/acme.sh/wiki/dnsapi
export DNS=dns_xxx

# DNS API 生效等待时间 值(单位：秒)
# 某些域名服务商的API生效时间较大，需要将这个值加大(比如900)
export DNS_SLEEP=600

# Cloudflare DNS=dns_cf
export CF_Key="cloudflareKey" 
export CF_Email="Cloudflare邮箱"

# 阿里云 DNS=dns_ali
export Ali_Key="阿里云Key"
export Ali_Secret="阿里云Secret"

# Dnspod DNS=dns_dp
export DP_Id="DnspodID"
export DP_Key="DnspodKey"

# Godaddy DNS=dns_gd
export GD_Key="GodaddyKey"
export GD_Secret="GodaddySecret"

# AWS DNS=dns_aws
export AWS_ACCESS_KEY_ID="awsID"
export AWS_SECRET_ACCESS_KEY="awsKey"

# Linode DNS=dns_linode
export LINODE_API_KEY="LinodeKey"

# 选择 ssl 服务商 (buypass要fq, zerossl和lectsencrypt是90天)
export CERT_SERVER="https://acme.hi.cn/directory"
# export CERT_SERVER=buypass
# export CERT_SERVER=zerossl
# export CERT_SERVER=letsencrypt

# ZeroSSL Buypass 注册邮箱账户(必填,无需提前注册填写即可)
# export ACCOUNT_EMAIL="myemail@example.com"
